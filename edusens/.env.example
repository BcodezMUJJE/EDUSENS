# Environment Variables for EduSens Africa Frontend
# Copy this file to .env and fill in your actual values

# API Configuration
REACT_APP_API_URL=http://localhost:5000

# OAuth Provider Credentials
# Google OAuth 2.0
REACT_APP_GOOGLE_CLIENT_ID=your_google_client_id_here

# Microsoft Azure AD
REACT_APP_MICROSOFT_CLIENT_ID=your_microsoft_client_id_here

# Apple Sign-In
REACT_APP_APPLE_CLIENT_ID=your_apple_client_id_here

# Authentication Configuration
REACT_APP_AUTH_TOKEN_EXPIRY=3600000
REACT_APP_REFRESH_TOKEN_EXPIRY=2592000000

# Feature Flags
REACT_APP_ENABLE_SOCIAL_AUTH=true
REACT_APP_ENABLE_USERNAME_GENERATION=true
REACT_APP_ENABLE_AUDIT_LOGGING=true
